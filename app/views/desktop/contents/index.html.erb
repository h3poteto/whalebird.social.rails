<div class="main-board">
  <div class="main-title">
    <h1><%= t(".title") %></h1>
    <h5 class="short-description"><%= t(".short_description") %></h5>

    <div class="downloads">
      <% if browser.platform.windows? %>
        <%= link_to desktop_contents_downloads_path+"#windows" do %>
          <button type="button" class="btn btn-info btn-lg">
            <%= t('.downloads') %>
          </button>
        <% end %>
      <% elsif browser.platform.mac? %>
        <%= link_to desktop_contents_downloads_path+"#darwin" do %>
          <button type="button" class="btn btn-info btn-lg">
            <%= t('.downloads') %>
          </button>
        <% end %>
      <% elsif browser.platform.linux? %>
        <%= link_to desktop_contents_downloads_path+"#linux" do %>
          <button type="button" class="btn btn-info btn-lg">
            <%= t('.downloads') %>
          </button>
        <% end %>
      <% else %>
        <%= link_to desktop_contents_downloads_path do %>
          <button type="button" class="btn btn-info btn-lg">
            <%= t('.downloads') %>
          </button>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
